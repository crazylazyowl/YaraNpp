<NotepadPlus>
	<functionList>
		<parser id="my_yara" displayName="YARA" commentExpr="((/\*.*?\*)/|(//.*?$))">
			<function mainExpr="rule\s+[\w\d_]+" displayMode="$functionName" >
				<functionName>
					<nameExpr expr="\s+[\w\d_]+"/>
				</functionName>
			</function>
		</parser>
	</functionList>
</NotepadPlus>